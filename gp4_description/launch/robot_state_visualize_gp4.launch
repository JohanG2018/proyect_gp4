<!--
  Manipulator specific version of the state visualizer.

  Defaults provided for GP4:
   - 6 joints

  Usage:
    robot_state_visualize_gp4.launch robot_ip:=<value> controller:=<yrc1000>
-->
<launch>
  <arg name="robot_ip" value="127.0.0.1"/>

  <!-- controller: Controller name (yrc1000) -->
  <arg name="controller" value="yrc1000"/>

  <rosparam command="load" file="$(find gp4_description)/config/joint_names_gp4.yaml" />

  <include file="$(find motoman_driver)/launch/robot_state_$(arg controller).launch">
    <arg name="robot_ip" value="$(arg robot_ip)" />
  </include>

  <node name="robot_state_publisher" pkg="robot_state_publisher" 
    type="robot_state_publisher" />

  <include file="$(find gp4_description)/launch/load_gp4.launch" />

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find industrial_robot_client)/config/robot_state_visualize.rviz" required="true" />
</launch>
